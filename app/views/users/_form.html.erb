<%= form_for @user do |f| %>
  <div class="field">
     <%= f.label :username %><br />
     <%= f.text_field :username %>
  </div>

  <div class="field">
     <%= f.label :cell %><br />
     <%= f.telephone_field :cell %>
  </div>

  <div class="field">
     <%= f.label :email %><br />
     <%= f.text_field :email %>
  </div>

  <div class="field">
     <%= f.label :avatar %><br />
     <%= f.file_field :avatar, title: "Please choose image" %>
  </div>

  <div class="field">
     <%= f.label :password %><br />
     <%= f.password_field :password %>
  </div>
  <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation %>
  </div>

  <div class="field">
     <%= f.submit %>
  </div>
<% end %>
