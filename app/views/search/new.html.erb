<div class="container">
  <div class="Park_Search">
    <h1>List of Parks Nearby</h1>
    <% @parks.each do |park| %>
      <%= link_to park_activities_path(park.id), :action => 'go'  do %>
        <h3><%= park.name %></h3>
        <p><%= park.address %></p>
      <% end %>
    <% end %>
  </div>



  <div class="Activity Search">
    <h1>List of Activities</h1>
    <% @activities.each do |activity| %>
      <%= link_to park_list_path(activity.id), :action => 'go'  do %>
        <h3><%= activity.name %></h3>
      <% end %>
    <% end %>
  </div>
</div>



<% @parks.each do |park| %>
  <%park.nearbys(1.9).each do |near_park| %>
    <li><%= link_to near_park.name%> (<%= near_park.distance.round(2)%> kms)</li>
  <% end %>
<% end %>

 <% @current_location.each do |park|%>
  <p> <%= park.name %> </p>

 <% end %>
